<div class="center">
  <h1>Delivery Checkout</h1>
  <h2>Amount of Order: <%= @deliveryamount %></h2>

  <!-- I think 2 lines right below can be removed (dropin-contianer, submit button) -->

  <div id="dropin-container"></div>
  <button id="submit-button" class="btn-dropin">Confirm entered Payment Information</button>

  <%= form_tag("/deliverys", method: "post", id: "payment-form") do %>
    <section>
      <label for="amount">
        <div class="input-wrapper amount-wrapper">

        </div>
      </label>

      <div class="bt-drop-in-wrapper">
        <div id="bt-dropin"></div>
      </div>
    </section>

    <p>-------------------------------</p>

    <input type="hidden" id="nonce" name="payment_method_nonce" />
    <button class="button btn-theme" type="submit"><span>Submit Order for Payment</span></button>
  <% end %>

</div>
<script src="https://js.braintreegateway.com/web/dropin/1.2.0/js/dropin.min.js"></script>
<script>


  var client_token = "<%= @client_token %>"
  var button = document.querySelector('#submit-button');

  braintree.dropin.create({
    authorization: client_token,
    container: '#dropin-container',
    paypal: {
    flow: 'vault'
    }
  }, function (createErr, instance) {
    button.addEventListener('click', function () {
      instance.requestPaymentMethod(function (err, payload) {
        // send nonce to server
        document.querySelector('#nonce').value = payload.nonce;
        form.submit();
      });
    });
  });

</script>
